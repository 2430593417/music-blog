.musiclist-container {
  display: flex;
  padding: 14rpx 20rpx;
  align-items: center;  /*垂直居中*/
}
.musiclist-index {
  color: #888;
  font-size: 34rpx;
  width: 80rpx;
}
.musiclist-info{
  flex-grow: 1;
  width: 0;   /*这样给0的话，可以让它不按原有盒模型分配，而是按父盒子分配，所有它就不会导致超出距离*/
}
.musiclist-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
}
.musiclist-alia {
  color: #888;
}
.musiclist-singer {
  font-size: 24rpx;
  color: #888;
}
.playing view, .playing text {
  color: #d43c33;
}