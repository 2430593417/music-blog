page {
  background-color: #f1f1f1;   /*设置最外层的背景颜色（小程序自带的page）*/
}
.blog {
  padding: 20rpx;
  background-color: #fff;
}
.blog-title {
  display: flex;
}
.blog-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.blog-time {
  font-size: 24rpx;
  color: #939393;
}
.blog-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}
.blog-img {
  flex: 1;
}
.img{
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.blog-img .img:nth-child(3n) {
  margin-right: 0;
}
.blog-nickName {
  font-size: 32rpx;
}

